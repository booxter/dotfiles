#!/bin/sh
set -xe

if [ $# -eq 0 ]; then
    # TODO: how to error properly?
    echo "$0 <proj>" 1>&2
    exit 1
fi

case $1 in
  ovs)
    proj=openvswitch/ovs
    ;;
  ovn)
    proj=ovn-org/ovn
    ;;
  *)
    proj=$1
    ;;
esac

dest=$(basename ${proj})
if [ ! -e "${dest}" ]; then
  git clone git@github.com:${proj}
fi
pushd ${dest}

function bear_make() {
  # TODO: don't build the same tree twice
  make clean
  bear -- make
}

case $1 in
  ovs)
    rm -rf sparse
    .ci/linux-prepare.sh
    .ci/linux-build.sh
    bear_make
    ;;
  ovn)
    .ci/linux-build.sh
    bear_make
    bear_run
    ;;
  *)
    ;;
esac

popd
