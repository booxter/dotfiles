#!/bin/sh
if [ $# -eq 0 ]
  then
    # TODO: how to error properly?
    echo "$0 <proj>" 1>&2
    exit 1
fi

LIMIT=10

# TODO: this prints errors like
# You should provide the server version in the URL configured via git-config or --server

proj=$1
if [ ${proj} = "ovs" ]; then
  proj=openvswitch
fi

cmd="git pw --project $proj"
common_args="--limit=$LIMIT --submitter=ihrachys@redhat.com"

echo "Patches:"
${cmd} patch list ${common_args} --state='changes requested'
echo "Series:"
${cmd} series list ${common_args}
